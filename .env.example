# Core OpenAI-compatible configuration
OPENAI_API_KEY=sk-your-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_MODEL=gemma3n

# Speech-to-text (Whisper) configuration
STT_API_BASE=https://api.openai.com/v1
# STT_API_KEY defaults to OPENAI_API_KEY when not set
# STT_API_KEY=
# WHISPER_URL can be used instead of STT_API_BASE
# WHISPER_URL=https://your-whisper-endpoint/v1

# Text-to-speech configuration
TTS_API_BASE=https://api-txt2audio.cloud-pi-native.com/v1/audio/speech
# TTS_API_KEY defaults to OPENAI_API_KEY when not set
# AUDIO_API_KEY can also be used as a fallback for TTS_API_KEY
# TTS_API_KEY=
# AUDIO_API_KEY=
# TTS_API_URL can be supplied instead of TTS_API_BASE
# TTS_API_URL=https://your-tts-endpoint/v1/audio/speech

# Request / response behaviour
REQUEST_TIMEOUT=30
DEFAULT_SYSTEM_PROMPT=You are a realtime translator and dialogue partner.
DEFAULT_TTS_INSTRUCTIONS=Speak clearly and positively using short sentences and natural pauses.
MAX_HISTORY_ITEMS=50
COMMIT_AUTORESP=1

# Voice activity detection defaults
DEFAULT_VAD_AGGR=2
DEFAULT_VAD_START_MS=120
DEFAULT_VAD_END_MS=450
DEFAULT_VAD_PAD_MS=180
DEFAULT_VAD_MAX_MS=5000
DEFAULT_VAD_MIN_VOICE_MS=3000
DEFAULT_VAD_AUTORESP=true
DEFAULT_VAD_INTERRUPT_RESPONSE=false

# Optional authentication token list (comma-separated)
API_TOKENS=token1,token2

# Server binding overrides
SERVER_NAME=0.0.0.0
SERVER_PORT=8080
